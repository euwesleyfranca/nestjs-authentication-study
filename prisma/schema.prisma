generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model People {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  country    String
  state      String
  city       String 
  status     Boolean  @default(true)
  day        String
  month      String
  year       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  user       User?
  @@map("people")
}

model User {
  id         String   @id @default(uuid())  
  mail       String   @unique
  username   String?
  password   String   
  compare_password String

  people People @relation(fields: [peopleId], references: [id])
  peopleId String
  
  @@map("user")
}
